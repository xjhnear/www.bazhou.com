<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>批次信息</h3>
			</div>
			<div class="box-content">
				<form id="batch-edit" action="<!--{{url('phone/batch/save')}}-->" method="POST" class='form-horizontal form-validate'>
				<input name="batch_id" type="hidden" value="<!--{{info.batch_id}}-->" />
				
				<div class="control-group">
					<label for="username" class="control-label">批次Code</label>
					<div class="controls">
					    <!--{%if info.batch_id%}-->
						<label><!--{{info.batch_code}}--></label>
						<input name="batch_code" type="hidden" value="<!--{{info.batch_code}}-->" />
						<!--{%else%}-->
						<input type="text" name="batch_code" class="input-normal" value="<!--{{info.batch_code}}-->" data-rule-required="true" data-msg-required="不能为空">
						<!--{%endif%}-->
					</div>
				</div>
				<!--{%if info.batch_id%}-->
				<div class="control-group">
					<label for="username" class="control-label">分类</label>
					<div class="controls">
						<label><!--{{info.category}}--></label>
					</div>
				</div>
				<div class="control-group">
					<label for="username" class="control-label">数据量</label>
					<div class="controls">
						<label><!--{{info.count}}--></label>
					</div>
				</div>
				<div class="control-group">
					<label for="username" class="control-label">导出时间</label>
					<div class="controls">
						<label><!--{{info.down_at|date('Y-m-d H:i:s')}}--></label>
					</div>
				</div>
				<div class="control-group">
					<label for="username" class="control-label">质量系数</label>
					<div class="controls">
						<input name="coefficient" type="text" value="<!--{{info.coefficient}}-->" />
					</div>
				</div>
				<!--{%endif%}-->

				<div class="form-actions">
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
				</div>    
				</form>
			</div>
		</div>
    </div>
</div>
<!--{%endblock%}-->