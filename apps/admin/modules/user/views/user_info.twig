<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>用户信息</h3>
			</div>
			<div class="box-content">
				<form id="batch-edit" action="<!--{{url('user/user/save')}}-->" method="POST" class='form-horizontal form-validate'>
				<input name="urid" type="hidden" value="<!--{{info.urid}}-->" />
				
				<div class="control-group">
					<label for="username" class="control-label">手机号</label>
					<div class="controls">
						<input type="text" name="mobile" class="input-normal" value="<!--{{info.mobile}}-->" data-rule-required="true" data-msg-required="不能为空">
					</div>
				</div>
				<div class="control-group">
					<label for="username" class="control-label">证件姓名</label>
					<div class="controls">
						<input name="card_name" type="text" value="<!--{{info.card_name}}-->" />
					</div>
				</div>
				<div class="control-group">
					<label for="username" class="control-label">证件性别</label>
					<div class="controls">
						<input name="card_sex" type="text" value="<!--{{info.card_sex}}-->" />
					</div>
				</div>
				<div class="control-group">
					<label for="username" class="control-label">证件地址</label>
					<div class="controls">
						<input name="card_address" type="text" value="<!--{{info.card_address}}-->" />
					</div>
				</div>
				<div class="control-group">
					<label for="username" class="control-label">身份证号码</label>
					<div class="controls">
						<input name="card_id" type="text" value="<!--{{info.card_id}}-->" />
					</div>
				</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
				</div>    
				</form>
			</div>
		</div>
    </div>
</div>
<!--{%endblock%}-->